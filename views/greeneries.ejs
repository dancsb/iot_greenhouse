<%- include('header') -%>
<%- include('navbar') -%>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4 mt-3 text-center">
                Greeneries
            </h1>
            <div class="container mb-3 border border-success rounded-4">
                <div class="row">
                    <div class="col-md-11">
                        <% greeneries.forEach(function(greenery){ %>
                            <h2 class="mt-3 mb-3">
                                <a href="/greeneries/<%= greenery._id %>"><%= greenery.name %></i></a>
                            </h2>
                        <% }); %>
                    </div>
                    <div class="col-md-1">
                        <h2 class="mt-3 mb-3">
                            3
                        </h2>
                        <h2 class="mt-3 mb-3">
                            2
                        </h2>
                        <h2 class="mt-3 mb-3">
                            5
                        </h2>
                    </div>
                </div>
            </div>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-outline-success rounded-circle d-flex align-items-center justify-content-center" style="width: 74px; height: 74px;" data-bs-toggle="modal" data-bs-target="#newModal">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h5 class="mb-3">New Greenery</h5>
                <form method="POST">
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control" placeholder="Name" id="greenery" name="greeneryname">
                    </div>
                    <div>
                        <input type=submit class="btn btn-success" value="Save"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('footer') -%>