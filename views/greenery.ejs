<%- include('header') -%>
<%- include('navbar') -%>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4 mt-3 text-center">
                <%= greenery.name %>
            </h1>
            <table class="table table-striped table-bordered border-success">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Low Treshold</th>
                        <th scope="col">High Treshold</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof greenery.tempLowTreshold !== 'undefined') { %>
                        <tr>
                            <th scope="row">Temperature</th>
                            <td><%= greenery.tempLowTreshold %> C°</td>
                            <td><%= greenery.tempHighTreshold %> C°</td>
                        </tr>
                    <% } %>
                    <% if (typeof greenery.humLowTreshold !== 'undefined') { %>
                        <tr>
                            <th scope="row">Humidity</th>
                            <td><%= greenery.humLowTreshold %> %</td>
                            <td><%= greenery.humHighTreshold %> %</td>
                        </tr>
                    <% } %>
                    <% if (typeof greenery.CO2LowTreshold !== 'undefined') { %>
                        <tr>
                            <th scope="row">CO2</th>
                            <td><%= greenery.CO2LowTreshold %> ppm</td>
                            <td><%= greenery.CO2HighTreshold %> ppm</td>
                        </tr>
                    <% } %>
                    <% if (typeof greenery.moistLowTreshold !== 'undefined') { %>
                        <tr>
                            <th scope="row">Soil moisture</th>
                            <td><%= greenery.moistLowTreshold %> %</td>
                            <td><%= greenery.moistHighTreshold %> %</td>
                        </tr>
                    <% } %>
                    <% if (typeof greenery.tempLowTreshold === 'undefined' && typeof greenery.humLowTreshold === 'undefined' && typeof greenery.CO2LowTreshold === 'undefined' && typeof greenery.moistLowTreshold === 'undefined') { %>
                        <tr>
                            <td class="text-center fst-italic" colspan="3">No constraints</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-outline-success rounded-circle d-flex align-items-center justify-content-center" style="width: 74px; height: 74px;" data-bs-toggle="modal" data-bs-target="#newModal">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-lg fade" id="newModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h5 class="mb-5">New constraint</h5>
                <form method="POST">
                    <select onchange="changeUnitLabel(this.options[this.selectedIndex].dataset.unit)" class="form-select mt-3 mb-4" id="source" name="source">
                        <% if (typeof greenery.tempLowTreshold === 'undefined') { %>
                            <option value="temp" data-unit="C°">Temperature</option>
                        <% } %>
                        <% if (typeof greenery.humLowTreshold === 'undefined') { %>
                            <option value="hum" data-unit="%">Humidity</option>
                        <% } %>
                        <% if (typeof greenery.CO2LowTreshold === 'undefined') { %>
                            <option value="CO2" data-unit="ppm">CO2</option>
                        <% } %>
                        <% if (typeof greenery.moistLowTreshold === 'undefined') { %>
                            <option value="moist" data-unit="%">Soil moisture</option>
                        <% } %>
                        <% if (typeof greenery.tempLowTreshold !== 'undefined' && typeof greenery.humLowTreshold !== 'undefined' && typeof greenery.CO2LowTreshold !== 'undefined' && typeof greenery.moistLowTreshold !== 'undefined') { %>
                            <option value="-" data-unit="-">-</option>
                        <% } %>
                    </select>
                    <div class="container ps-0 pe-0">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="number" class="form-control" placeholder="Low treshold" oninput="allowCustomValue(this)" id="low" name="lowTresh">
                                    <span class="input-group-text unitlabel"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="number" class="form-control" placeholder="High treshold" oninput="allowCustomValue(this)" id="high" name="highTresh">
                                    <span class="input-group-text unitlabel"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5">
                        <input type=submit class="btn btn-success" value="Save"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function changeUnitLabel(unit) {
        var u = document.getElementsByClassName("unitlabel");
        for (var i = 0; i < u.length; i++)
            u[i].innerHTML = unit;
    }

    var s = document.getElementById("source");
    changeUnitLabel(s.options[s.selectedIndex].dataset.unit);
</script>
<%- include('allowcustomvalue') -%>
<%- include('footer') -%>