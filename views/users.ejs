<%- include('header') -%>
<%- include('navbar') -%>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4 mt-3 text-center">
                Users
            </h1>
            <div class="container mb-3 border border-success rounded-4">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Username</th>
                            <th scope="col">Note</th>
                            <th scope="col" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.note %>
                                </td>
                                <td style="width:30px;white-space: nowrap">
                                    <a href="/users/<%= user._id %>/edit" class="btn btn-warning" role="button"><i class="fa-solid fa-pencil"></i></a>
                                    <a href="/users/<%= user._id %>/modify" class="btn btn-success" role="button"><i class="fa-solid fa-key"></i></a>
                                    <button onclick="changeDelLink('/users/<%= user._id %>/del')" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delModal">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-outline-success rounded-circle d-flex align-items-center justify-content-center" style="width: 74px; height: 74px;" data-bs-toggle="modal" data-bs-target="#newModal">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h5 class="mb-3">New User</h5>
                <form method="POST">
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control" placeholder="username" id="user" name="username">
                    </div>
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control" placeholder="note" id="note" name="note">
                    </div>
                    <div class="mt-3 mb-3">
                        <input type="password" class="form-control" placeholder="password" id="pass" name="password">
                    </div>
                    <div class="mt-5">
                        <input type=submit class="btn btn-success" value="Save"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('delmodal') -%>
<%- include('footer') -%>